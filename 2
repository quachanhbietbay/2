    <script>
        // Chức năng Slideshow :
        var slideIndex = 0;
        autoSlideShow();
        function autoSlideShow() {
            var i;
            var x = document.getElementsByClassName("slide-frame");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            slideIndex++;
            if (slideIndex > x.length) { slideIndex = 1 }
            x[slideIndex - 1].style.display = "block";
            setTimeout(autoSlideShow, 1500); // Bản thân hàm này sẽ tự lặp lại sau 1.5 giây
        }


        /*   BÀI HỌC HÔM NAY
       math.random()=>ngẫu nhiên từ 0-1
       math.random() * 10 =>ngẫu nhiên từ 0-10
       math.floor(8.9) = 8 => làm tròn xuống 
       math.round(8.5) = 9 =>làm tròn theo toán học 
       math.ceil(8.1) = 9 => làm tròn lên
       biến mảng (Array) là ngoặc vuông
       return sẽ dừng hẳn vòng lặp
       */

        // hàm hỗ trợ : kiểm tra xem có trùng trong biến mảng hay không
        function kiemtra(K, Y) {
            for (phantu of Y) {
                if (phantu == K) {
                    return true;
                }
            }
            return false;
        }
        var deptrai = [];



        for (var lap = 0; lap < 4; lap++) { // lap < 4 hoặc <=3  
            var A = Math.floor(Math.random() * 9);
            while (kiemtra(A, deptrai)) {
                A = Math.floor(Math.random() * 9);
            }
            deptrai.push(A);
        }


        /// tất cả bài viết ẩn đi
        var baiviet = document.getElementsByClassName("blog-post");
        for (var i = 0; i < 10; i++) {
            baiviet[i].style.display = "none";
        }
        // hiện lên các bài viết ngẫu nhiên
        for (var i = 0; i < 4; i++) {
            baiviet[deptrai[i]].style.display = "block";

        }


        // tiêu đề
        // hàm hỗ trợ
        function kt(K, T) {
            for (Teo of T) {
                if (Teo == K) {
                    return true;

                }
            }
            return false;
        }
        var C = [];

        for (var i = 0; i <= 2; i++) {
            var B = Math.floor(Math.random() * 6);
            while (kt(B, C)) {
                B = Math.floor(Math.random() * 6);
            }
            C.push(B);
        }

        // ẩn
        var tieude = document.getElementsByClassName("hot-post");
        for (var deman = 0; deman <= 6; deman++) {
            tieude[deman].style.display = "none";
        }
        // hiện
        for (var demhien = 0; demhien <= 2; demhien++) {
            tieude[C[demhien]].style.display = "block";
        }

    </script>
